<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:id="@+id/background_layout"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/facepp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:src="@drawable/facepp_inside"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/facepp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/wait_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textColor="@color/bar_color"
            android:textSize="20sp"
            android:text="@string/wait_tv_start"
            android:visibility="invisible" />
        <club.letget.howolddoilook.widget.HeartProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:id="@+id/progress"
            android:layout_alignTop="@+id/facepp"
            android:layout_toRightOf="@+id/facepp"
            android:layout_toEndOf="@+id/facepp" />
    </LinearLayout>

    <ImageView
        android:layout_width="260dp"
        android:layout_height="360dp"
        android:id="@+id/image"
        android:layout_centerInParent="true"
        android:src="@drawable/pic_bg"
        />
    <ImageView
        android:id="@+id/result_iv"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        />

    <RelativeLayout
        android:id="@+id/button_layout"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image">
        <club.letget.howolddoilook.widget.RippleTextView
            android:id="@+id/choice_rtv"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_photo"
            android:textSize="20sp"
            android:background="@drawable/shape"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textColor="@color/button_test_color"
            android:text="@string/choice_rtv_text"
            />

        <club.letget.howolddoilook.widget.RippleTextView
            android:id="@+id/camera_rtv"
            android:background="@drawable/shape_camera_rtv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:visibility="gone"
            android:drawableLeft="@drawable/ic_camera"
            android:paddingLeft="2dp"
            android:textColor="@color/button_test_color"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/choice_rtv"
            android:layout_alignLeft="@+id/choice_rtv"
            android:layout_alignStart="@+id/choice_rtv" />
        <club.letget.howolddoilook.widget.RippleTextView
            android:id="@+id/pic_rtv"
            android:background="@drawable/shape_pic_rtv"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_gallery"
            android:textColor="@color/button_test_color"
            android:visibility="gone"
            android:layout_alignTop="@+id/choice_rtv"
            android:layout_alignRight="@+id/choice_rtv"
            android:layout_alignEnd="@+id/choice_rtv" />
        <club.letget.howolddoilook.widget.RippleTextView
            android:background="@drawable/shape"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:visibility="gone"
            android:textColor="@color/button_test_color"
            android:id="@+id/share"
            android:text="@string/shard" />
        <club.letget.howolddoilook.widget.RippleTextView
            android:background="@drawable/shape"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:text="@string/save"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/button_test_color"
            android:textSize="20sp"
            android:id="@+id/save"/>
        <club.letget.howolddoilook.widget.RippleTextView
            android:drawableLeft="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/button_test_color"
            android:layout_centerVertical="true"
            android:background="@drawable/shape"
            android:textSize="20sp"
            android:id="@+id/back"/>
    </RelativeLayout>
</RelativeLayout>
